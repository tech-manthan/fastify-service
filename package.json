{
  "name": "fastify-service",
  "version": "1.0.0",
  "description": "Service Templater Using Fastify",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "generate": "dotenv -e .env.dev npx prisma generate",
    "migrate:dev": "dotenv -e .env.dev npx prisma migrate dev",
    "migrate:prod": "dotenv -e .env.prod npx prisma migrate deploy",
    "migrate:test": "dotenv -e .env.test npx prisma migrate deploy",
    "migrate:deploy": "dotenv -e .env.dev npx prisma migrate deploy",
    "migrate:reset": "dotenv -e .env.dev npx prisma migrate reset",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  },
  "prisma": {
    "schema": "src/prisma/schema"
  },
  "author": "Manthan Sharma <techmanthansharma@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.2",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "dependencies": {
    "@fastify/awilix": "^6.0.1",
    "@fastify/env": "^5.0.1",
    "@prisma/client": "^5.22.0",
    "awilix": "^12.0.3",
    "fastify": "^5.1.0"
  }
}
