{
  "name": "fastify-service",
  "version": "1.0.0",
  "description": "Service Templater Using Fastify",
  "main": "server.js",
  "scripts": {
    "build": "tsc",
    "dev": "cross-env NODE_ENV=prod nodemon src/server.ts",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  },
  "author": "Manthan Sharma <techmanthansharma@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.9.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "dependencies": {
    "@fastify/env": "^5.0.1",
    "fastify": "^5.1.0"
  }
}
